# Environment
NODE_ENV=development

# Server
PORT=3000

# Database
DATABASE_URL=postgresql://identity_user:identity_pass@localhost:5432/identity_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=identity_db
DB_USER=identity_user
DB_PASSWORD=identity_pass

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-MINIMUM-32-CHARACTERS
JWT_EXPIRATION=1h

# CORS
CORS_ORIGIN=http://localhost:8080,http://localhost:3001

# Logging
LOG_LEVEL=debug

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
